<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}">


    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/runserver"
            android:text="runserver"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/runclient"
            android:text="runclient"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/stopserver"
            android:text="stopserver"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/stopclient"
            android:text="stopclient"/>

</LinearLayout>
