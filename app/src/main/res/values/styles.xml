<resources>

    <style name="ComposeActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:height">32dp</item>
        <item name="android:background">@drawable/custom_actionbar_bg</item>
    </style>
    <style name="CloseButton" parent="@android:style/Widget.ActionButton.CloseMode">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>
    <style name="CustomActionMode" parent="@android:style/Widget.Holo.ActionMode">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:height">45dp</item>
        <item name="android:actionModeCloseButtonStyle">@style/CloseButton</item>
    </style>
    <style name="UnifiedEmailTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ComposeActionBar</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
        <item name="android:actionModeStyle">@style/CustomActionMode</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="actionbar_back_button">
        <item name="android:src">@drawable/action_bar_back_btn</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!-- No change in the default case. -->
    <style name="AccountSpinnerAnchorTextPrimary" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/quick_reply_bg</item>
        <item name="android:layout_marginBottom">0.5dp</item>
        <!--<item name="android:paddingRight">16dp</item>-->
        <!--     <item name="android:textStyle">bold</item> -->
    </style>
    <style name="ComposeDialogListText">
        <item name="android:textSize">@dimen/list_body_text_size</item>
        <item name="android:textColor">@color/title_body_color</item>
    </style>
    <style name="CustomDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_marginLeft">@dimen/conversation_item_margin</item>
        <item name="android:layout_marginRight">@dimen/conversation_item_margin</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="DialogButtonText">
        <item name="android:textColor">@color/title_body_color</item>
        <item name="android:textSize">@dimen/list_body_text_size</item>
    </style>
    <style name="TableText">
        <item name="android:textColor">@color/title_body_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/meter_data_list_item_height</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
    </style>
    <style name="TableHeadText" parent="TableText">
        <item name="android:textSize">@dimen/list_body_text_size</item>
    </style>
    <style name="ExpandableListText">
        <item name="android:textColor">@drawable/center_text_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/expand_list_item_height</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
    </style>
    <style name="ListTextView">
        <item name="android:textColor">@drawable/center_text_selector</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/collect_list_item_height</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
    </style>
    <style name="BtnStyle1">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/btn_background_orange</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    <style name="MeterTestCenterListTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/collect_list_item_height</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
        <item name="android:textColor">@drawable/center_text_selector</item>
    </style>
    <style name="LocationInfoTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/collect_list_item_height</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
        <item name="android:color">@color/color_black</item>
    </style>
    <style name="MeterDataFilterTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">@dimen/meter_data_filter_item_height</item>
        <item name="android:background">@color/transparent_color</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
    </style>
    <style name="NomalTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <!--<item name="android:layout_height">@dimen/normal_text_view_height</item>-->
        <!--<item name="android:background">@color/transparent_color</item>-->
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
        <item name="android:textColor">@drawable/center_text_selector</item>
    </style>
    <style name="TabHostStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/btn_background_orange_to_green</item>
        <item name="android:textSize">@dimen/list_body_text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    <style name="NomalTextStyleTitle" parent="NomalTextStyle">

    </style>
    <style name="NomalTextStyleValue" parent="NomalTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>
</resources>
