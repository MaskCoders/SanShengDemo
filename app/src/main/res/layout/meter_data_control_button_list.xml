<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--list-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button android:id="@+id/text1" style="@style/BtnStyle1"
                android:text="查询条件"/>
        <Button android:id="@+id/text2" style="@style/BtnStyle1"
                android:text="全部删除"/>
    </LinearLayout>
    <!--detail-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button android:id="@+id/text3" style="@style/BtnStyle1"
                android:text="删除此项"/>
    </LinearLayout>
    <!--filter-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button android:id="@+id/text4" style="@style/BtnStyle1"
        android:text="确认"/>
        <Button android:id="@+id/text5" style="@style/BtnStyle1"
        android:text="取消"/>
    </LinearLayout>
