<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/meter_test_control_home">
        <com.sansheng.testcenter.base.view.DrawableCenterTextView
                android:id="@+id/text3" style="@style/BtnStyle1"
                android:drawableLeft="@drawable/left_icon_start1"
                android:text="开始检测"/>
        <com.sansheng.testcenter.base.view.DrawableCenterTextView
                android:id="@+id/text4" style="@style/BtnStyle1"
                android:drawableLeft="@drawable/left_icon_clock1"
                android:text="设置时钟"/>
        <com.sansheng.testcenter.base.view.DrawableCenterTextView
                android:id="@+id/text1" style="@style/BtnStyle1"
                android:drawableLeft="@drawable/left_icon_log"
                android:text="显示日志"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/meter_test_control_select_meter"
            android:orientation="vertical"
            android:visibility="gone">
        <com.sansheng.testcenter.base.view.DrawableCenterTextView
                android:id="@+id/confirm" style="@style/BtnStyle1"
                android:drawableLeft="@drawable/left_icon_confirm1"
                android:text="确认"/>
        <com.sansheng.testcenter.base.view.DrawableCenterTextView
                android:id="@+id/cancel" style="@style/BtnStyle1"
                android:drawableLeft="@drawable/left_icon_cancel1"
                android:text="取消"/>
    </LinearLayout>
</LinearLayout>