<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/meter_item"
              android:layout_margin="5dp">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:id="@+id/meter_type"
            android:layout_alignParentLeft="true"
            android:src="@drawable/single_meter"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/meter_num"
                style="@style/MeterTestCenterListTextStyle"
                android:text="测量点"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/meter_address"
                style="@style/MeterTestCenterListTextStyle"
                android:text="用户地址"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/meter_ip"
                style="@style/MeterTestCenterListTextStyle"
                android:text="通讯地址"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meter_note"
                android:layout_weight="1"
                style="@style/MeterTestCenterListTextStyle"
                android:text="说明"/>
</LinearLayout>