    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NomalTextStyleTitle"
                android:text="侦听端口"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/meter_port"
                style="@style/NomalTextStyleValue"/>
    </LinearLayout>
</LinearLayout>