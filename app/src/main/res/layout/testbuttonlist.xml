<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button android:id="@+id/text1" android:layout_width="fill_parent" android:layout_height="0dp"
            android:layout_weight="1" android:paddingBottom="5dp" android:textColor="#fff"
            android:text="showshort" android:background="@drawable/btn_sel"/>
    <Button android:id="@+id/text2" android:layout_width="fill_parent" android:layout_height="0dp"
            android:layout_weight="1" android:paddingBottom="5dp" android:textColor="#fff"
            android:text="showwhole" android:background="@drawable/btn_sel"/>
    <Button android:id="@+id/text3" android:layout_width="fill_parent" android:layout_height="0dp"
            android:layout_weight="1" android:paddingBottom="5dp" android:textColor="#fff"
            android:text="hideshort" android:background="@drawable/btn_sel"/>
    <Button android:id="@+id/text4" android:layout_width="fill_parent" android:layout_height="0dp"
            android:layout_weight="1" android:paddingBottom="5dp" android:textColor="#fff"
            android:text="hidewhole" android:background="@drawable/btn_sel"/>

</LinearLayout>