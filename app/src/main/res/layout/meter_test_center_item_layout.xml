<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:id="@+id/meter_test_center_item">
    <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/test_item_describe"
            style="@style/MeterTestCenterListTextStyle"
            android:textColor="@color/color_black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_item_result"
            android:layout_weight="1"
            style="@style/MeterTestCenterListTextStyle"
            android:textColor="@color/main_green"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test_item_explain"
            android:layout_weight="1"
            style="@style/MeterTestCenterListTextStyle"
            android:textColor="@color/err_msg_tip"/>
</LinearLayout>